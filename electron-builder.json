
{
  "appId": "com.company.communication-hub",
  "productName": "Company Communication Hub",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "public/electron.js",
    "node_modules/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "target": "dmg",
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/favicon.ico"
  }
}
